<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexj.upintheclouds.Game">

    <TextView
        android:text="Welcome To Up In The Clouds Anagram Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <TextView
        android:text="Word for Anagram Game:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDisplay"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#fff"
        android:id="@+id/editTextUserInput"
        android:textAlignment="center"
        android:background="#BBDEFB"
        android:textStyle="normal|bold"
        android:layout_height="40dp"
        android:layout_width="262dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textViewDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Score: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEnter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textViewScore" />

    <Button
        android:text="Instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonInstructions"
        android:layout_below="@+id/textViewScore"
        android:layout_toRightOf="@+id/textViewScore"
        android:layout_toEndOf="@+id/textViewScore"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEnter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenu"
        android:layout_alignBaseline="@+id/buttonInstructions"
        android:layout_alignBottom="@+id/buttonInstructions"
        android:layout_toLeftOf="@+id/textViewScore"
        android:layout_toStartOf="@+id/textViewScore" />

    <TextView
        android:text="Possible:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewScore"
        android:layout_alignLeft="@+id/editTextUserInput"
        android:layout_alignStart="@+id/editTextUserInput"
        android:id="@+id/textViewPossible" />

</RelativeLayout>
